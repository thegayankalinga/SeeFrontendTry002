<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Software Effort Estimation</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-900">
<header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0 text-xl font-bold text-indigo-600">
                <a asp-area="" asp-controller="Home" asp-action="Index">SeeFrontendTry002</a>
            </div>
            <nav class="space-x-4 text-sm">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-indigo-600 font-medium">Privacy</a>
            </nav>
        </div>
    </div>
</header>

<div class="container mx-auto px-4 py-6">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="bg-white border-t py-4 mt-12">
    <div class="max-w-7xl mx-auto px-4 text-sm text-gray-500 flex justify-between">
        <span>&copy; 2025 - SeeFrontendTry002</span>
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:underline">Privacy</a>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>