
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Software Effort Estimation</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/markdown.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css" />
</head>
<body class="min-h-screen bg-gray-50 flex flex-col">
    <!-- Top navigation bar -->
    <header class="bg-gradient-to-r from-indigo-700 to-blue-600 text-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center">
                            <i class="fas fa-chart-line text-2xl mr-2"></i>
                            <span class="text-xl font-bold">Software Effort Estimation Project</span>
                        </a>
                    </div>
                </div>
                <nav class="flex items-center space-x-6">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white hover:text-blue-100 font-medium transition-colors duration-200 flex items-center">
                        <i class="fas fa-home mr-1"></i> Home
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white hover:text-blue-100 font-medium transition-colors duration-200 flex items-center">
                        <i class="fas fa-shield-alt mr-1"></i> Privacy
                    </a>
                    <a href="#" class="text-white hover:text-blue-100 font-medium transition-colors duration-200 flex items-center">
                        <i class="fas fa-question-circle mr-1"></i> Help
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Sidebar and main content -->
    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar -->
        <aside class="hidden md:block w-64 bg-white border-r border-gray-200 shadow-sm">
            <div class="p-6">
                <h3 class="font-bold text-gray-700 uppercase text-sm tracking-wider mb-4">Navigation</h3>
                <nav class="space-y-2">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-tachometer-alt w-5 h-5 mr-2 text-gray-500"></i>
                        Dashboard
                    </a>
                    <a asp-controller="Prediction" asp-action="Step1" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-plus-circle w-5 h-5 mr-2 text-gray-500"></i>
                        New Project
                    </a>
                    <a asp-controller="Prediction" asp-action="Index" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-clipboard-list w-5 h-5 mr-2 text-gray-500"></i>
                        Project List
                    </a>
                    <a href="#" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-chart-bar w-5 h-5 mr-2 text-gray-500"></i>
                        Reports
                    </a>
                    <a href="#" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-cog w-5 h-5 mr-2 text-gray-500"></i>
                        Settings
                    </a>
                    <hr class="my-4 border-gray-200" />
                    <h3 class="font-bold text-gray-700 uppercase text-sm tracking-wider mb-2">Models</h3>
                    <a asp-controller="Blog" asp-action="DeepLearning" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-brain w-5 h-5 mr-2 text-gray-500"></i>
                        Deep Learning
                    </a>
                    <a asp-controller="Blog" asp-action="ClassicalML" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200">
                        <i class="fas fa-project-diagram w-5 h-5 mr-2 text-gray-500"></i>
                        Classical ML
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Main content -->
        <div class="flex-1 overflow-auto">
            <!-- Breadcrumbs -->
            <div class="bg-white shadow-sm border-b border-gray-200">
                <div class="max-w-7xl mx-auto py-3 px-4 sm:px-6 lg:px-8">
                    <nav class="flex items-center text-sm font-medium">
                        <a href="#" class="text-gray-500 hover:text-gray-700">Home</a>
                        <span class="mx-2 text-gray-400">/</span>
                        <span class="text-gray-900">@ViewData["Title"]</span>
                    </nav>
                </div>
            </div>

            <!-- Main content area -->
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-600">
                <div class="mb-4 md:mb-0">
                    <p>&copy; @DateTime.Now.Year - Software Effort Estimation Project - Advanced Software Engineering</p>
                </div>
                <div class="flex space-x-4">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-indigo-600 transition-colors duration-200">Privacy</a>
                    <a href="#" class="hover:text-indigo-600 transition-colors duration-200">Terms</a>
                    <a href="#" class="hover:text-indigo-600 transition-colors duration-200">Contact</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile menu button and dropdown (visible on small screens) -->
    <div class="md:hidden fixed bottom-4 right-4">
        <button id="mobile-menu-button" class="bg-indigo-600 text-white p-3 rounded-full shadow-lg hover:bg-indigo-700 focus:outline-none">
            <i class="fas fa-bars"></i>
        </button>
        <div id="mobile-menu" class="hidden absolute bottom-16 right-0 w-48 bg-white rounded-lg shadow-xl border border-gray-200">
            <div class="py-2">
                <a asp-controller="Home" asp-action="Index" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                    <i class="fas fa-home mr-2"></i> Home
                </a>
                <a asp-controller="Prediction" asp-action="Step1" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                    <i class="fas fa-plus-circle mr-2"></i> New Project
                </a>
                <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                    <i class="fas fa-chart-bar mr-2"></i> Reports
                </a>
                <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                    <i class="fas fa-cog mr-2"></i> Settings
                </a>
            </div>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/plugins/autoloader/prism-autoloader.min.js"></script>
</body>
</html>
