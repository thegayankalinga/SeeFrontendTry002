@model SeeFrontendTry002.ViewModels.PredictionInputViewModel

@{
    ViewData["Title"] = "Performance, QA & Integration";
}

<div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">New Project</h1>
            <p class="text-sm text-gray-500 mt-1">Step 4: Performance, QA & Integration</p>
        </div>

        <!-- Progress steps -->
        <div class="mb-8">
            <div class="flex items-center w-full">
                <div class="flex items-center relative">
                    <div class="rounded-full h-12 w-12 py-3 border-2 bg-green-500 border-green-500 text-white font-bold flex items-center justify-center">
                        <i class="fas fa-check text-sm"></i>
                    </div>
                    <div class="absolute top-0 -ml-10 text-center mt-16 w-32 text-xs font-medium text-gray-500">Project Info</div>
                </div>
                <div class="flex-auto border-t-2 border-green-500"></div>
                <div class="flex items-center relative">
                    <div class="rounded-full h-12 w-12 py-3 border-2 bg-green-500 border-green-500 text-white font-bold flex items-center justify-center">
                        <i class="fas fa-check text-sm"></i>
                    </div>
                    <div class="absolute top-0 -ml-10 text-center mt-16 w-32 text-xs font-medium text-gray-500">Compliance & Tech</div>
                </div>
                <div class="flex-auto border-t-2 border-green-500"></div>
                <div class="flex items-center relative">
                    <div class="rounded-full h-12 w-12 py-3 border-2 bg-green-500 border-green-500 text-white font-bold flex items-center justify-center">
                        <i class="fas fa-check text-sm"></i>
                    </div>
                    <div class="absolute top-0 -ml-10 text-center mt-16 w-32 text-xs font-medium text-gray-500">Architecture</div>
                </div>
                <div class="flex-auto border-t-2 border-green-500"></div>
                <div class="flex items-center relative">
                    <div class="rounded-full h-12 w-12 py-3 border-2 border-indigo-600 bg-indigo-600 text-white font-bold flex items-center justify-center">
                        4
                    </div>
                    <div class="absolute top-0 -ml-10 text-center mt-16 w-32 text-xs font-medium text-indigo-600">Integration</div>
                </div>
                <div class="flex-auto border-t-2 border-gray-300"></div>
                <div class="flex items-center relative">
                    <div class="rounded-full h-12 w-12 py-3 border-2 border-gray-300 bg-white text-gray-400 font-bold flex items-center justify-center">
                        5
                    </div>
                    <div class="absolute top-0 -ml-10 text-center mt-16 w-32 text-xs font-medium text-gray-500">Review</div>
                </div>
            </div>
        </div>

        <form method="post" asp-action="Step4" class="mt-8">
            <!-- Performance Section -->
            <div class="bg-gray-50 p-6 rounded-lg mb-6 shadow-sm">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-cogs text-indigo-500 mr-2"></i>
                    Performance & QA Metrics
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="TpsRequired" class="block text-sm font-medium text-gray-700 mb-1">
                            TPS Required <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                <i class="fas fa-tachometer-alt text-gray-400 text-sm"></i>
                            </div>
                            <input asp-for="TpsRequired" type="number" class="pl-10 pr-4 py-2 h-10 w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md" />
                        </div>
                        <span asp-validation-for="TpsRequired" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label asp-for="WarrantyMonths" class="block text-sm font-medium text-gray-700 mb-1">
                            Warranty Period (Months) <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                <i class="fas fa-calendar-alt text-gray-400 text-sm"></i>
                            </div>
                            <input asp-for="WarrantyMonths" type="number" class="pl-10 pr-4 py-2 h-10 w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md" />
                        </div>
                        <span asp-validation-for="WarrantyMonths" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label asp-for="NoOfFunctionalModules" class="block text-sm font-medium text-gray-700 mb-1">
                            Functional Modules
                        </label>
                        <div class="relative">
                            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                <i class="fas fa-cube text-gray-400 text-sm"></i>
                            </div>
                            <input asp-for="NoOfFunctionalModules" type="number" class="pl-10 pr-4 py-2 h-10 w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md" />
                        </div>
                        <span asp-validation-for="NoOfFunctionalModules" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label asp-for="NoOfNoneFunctionalModules" class="block text-sm font-medium text-gray-700 mb-1">
                            Non-Functional Modules
                        </label>
                        <div class="relative">
                            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                <i class="fas fa-cubes text-gray-400 text-sm"></i>
                            </div>
                            <input asp-for="NoOfNoneFunctionalModules" type="number" class="pl-10 pr-4 py-2 h-10 w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md" />
                        </div>
                        <span asp-validation-for="NoOfNoneFunctionalModules" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="mt-8 flex items-center justify-between">
                <a asp-action="Step3" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-arrow-left mr-2"></i> Previous
                </a>
                <div>
                    <span class="text-sm text-gray-500 mr-4">Step 4 of 5</span>
                    <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                        Continue <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
